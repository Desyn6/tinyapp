<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-item nav-link" href="/urls">My URLs</a>
        </li>
        <li class="nav-item">
          <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        </li>
      </ul>
    </div>
    <% if(user){ %>
      <!-- greeting message and logout button -->
      <a class="mr-2">Logged in as: <%= user.email %></a>
      <form action="/logout" method="POST">
        <button type="submit" class="btn btn-primary">Logout</button>
      </form>
    <% } else{ %>
      <!-- login form, displayed when username is falsy -->
      <form class="form-inline my-2 my-lg-0" action="/login" method="POST">
        <input
          class="form-control mr-sm-2"
          type="text"
          name="username"
          placeholder="username"
        />
        <button type="submit" class="btn btn-primary">Login</button>
      </form>
    <% } %>
  </nav>
</header>